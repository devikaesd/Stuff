<Window x:Class="HelloWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBlock Margin="96,84,96,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <RadioButton x:Name="RadioButton1" Content="Hello" Margin="182,134,291,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <RadioButton x:Name="RadioButton2" Content="Goodbye" HorizontalAlignment="Center" Margin="258,134,195,0" VerticalAlignment="Top"/>
        <Button x:Name="btn1" Content="Display" HorizontalAlignment="Center" Margin="0,208,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button x:Name="btn2" Content="Test" HorizontalAlignment="Center" Margin="0,253,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
        <TextBlock x:Name="textBox" HorizontalAlignment="Left" Margin="322,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Rectangle x:Name="rectangle" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="50" Stroke="Black" VerticalAlignment="Top" Width="50" Margin="40,232,0,0" RenderTransformOrigin="0.5,0.5"/>

    </Grid>
</Window>
