<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".FromTo">

    <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/fromText"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:hint="From:"/>

                <LinearLayout
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:orientation="horizontal">

                    <EditText
                            android:id="@+id/fromInput"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:hint="dd/mm/yyyy"/>

                    <Button
                            android:id="@+id/fromPickBtn"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:onClick="minus"
                            android:layout_weight="1"
                            android:text="Pick"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/toText"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:hint="To:"/>

                <LinearLayout
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:orientation="horizontal">

                    <EditText
                            android:id="@+id/toInput"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:hint="dd/mm/yyyy"/>
                    <Button
                            android:id="@+id/toPickBtn"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:onClick="minus"
                            android:layout_weight="1"
                            android:text="Pick"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/fromToHoursText"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:hint="Hours:"/>

                <EditText
                        android:id="@+id/fromToHoursField"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:hint="Hours"
                        android:inputType="none"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                <TextView
                        android:id="@+id/fromToResultText"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:hint="Result:"/>

                <EditText
                        android:id="@+id/fromToResultField"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:hint="Result"
                        android:inputType="none"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/fromToDateText"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="Date:"/>

            <TextView
                    android:id="@+id/fromToDateText"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="Hours:"/>

            <TextView
                    android:id="@+id/fromToDateText"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="Rate:"/>

            <TextView
                    android:id="@+id/fromToDateText"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="Result:"/>


        </LinearLayout>

        <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/fromToReportDate"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="mm/yy/yyyy"/>
                <TextView
                        android:id="@+id/fromToReportHours"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="Hours"/>
                <TextView
                        android:id="@+id/fromToReportRate"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:gravity="right"
                        android:text="Rate"/>
                <TextView
                        android:id="@+id/fromToReportResult"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="3"
                        android:gravity="right"
                        android:text="Result"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
